.record_container {
  height: 600rpx;
  position: relative;
  margin: 0 auto;
}

/**交易记录的title样式**/
.record_title {
  width: 94%;
  color: #00E0FE;
  font-size: 24rpx;
  position: relative;
  top: 0;
  left: 0;
  margin: 16rpx auto 0;
  border-bottom: 1px solid #1B4F6A;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.record_title text{
  line-height: 60rpx;
  text-align: center;
  display: block;
  flex: 1;
}
.trade_type {
  flex: 0.4;
  text-align: center;
  align-items: center;
}

