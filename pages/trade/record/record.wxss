/**交易列表的样式 --- 不使用背景图**/
.record_item {
  color: #fff;
  font-size: 24rpx;
  margin: 18rpx auto 20rpx;
  position: relative;
  width: 604rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #1B4F6A;
}
.record_item text{
  display: block;
  text-align: center;
  flex: 1;
}
.trade_logo {
  width: 36rpx;
  height: 36rpx;
