/** 立即参赛页面样式 **/
.start_container {
  width:100%;
  height:100%;
  background-size: cover;
  background-image: url('http://pcb8f4day.bkt.clouddn.com/bg_home_gif.gif');
}

/** 邀请好友页面样式 **/
.invite_container {
  width:100%;
  height:100%;
  background-size: cover;
  background-image: url('http://pcb8f4day.bkt.clouddn.com/bg_wait.png');
}

.room_info {
  width: 626rpx;
  height: 561rpx;
  background-size: cover;
  background-image: url('http://pcb8f4day.bkt.clouddn.com/bg_room.png');
  position: absolute;
  bottom: 269rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  opacity: 0;
  animation: bounceInLeft 1s ease 0.2s forwards;
}

.room_info .coin_img {
  width: 204rpx;
  height: 60rpx;
  position: absolute;
  top: 185rpx;
  left: 0;
  right: 0;
  margin: auto;
  opacity: 0;
  animation: fadeInBig 1.5s ease 0.8s normal forwards;
}

.room_info .text_area {
  color: #00E0FE;
  font-size: 36rpx;
  text-align: center;
  letter-spacing: 2rpx;
  position: absolute;
  top: 274rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}

/** 开赛倒计时样式 **/
.gametitle {
  width: 214rpx;
  height: 104rpx;
  position: absolute;
  top: 30%;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.gamecount {
  width: 120rpx;
  height: 138rpx;
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  margin: 0 auto;
  animation: seconddiv 3s linear 0s 3 normal;
}

/** 开始交易页面样式 **/
.trade_container{
  width: 100%;
  height: 100%;
  background-color: #0E1834;
}
.count_time {
  display: block;
  font-size: 20rpx;
  color: #FFB10A;
  float: right;
  margin: 28rpx 47rpx 10rpx;
  letter-spacing: 2rpx;
}
.count_slider {
  width: 666rpx;
  height: 40rpx;
  margin: 0rpx auto;
  position: relative;
  left: 43rpx;
  right: 42rpx;
}

/** 公告栏 **/
.notice_container{
  height: 40rpx;
  margin: 4rpx auto;
  position: relative;
  left: 43rpx;
}
.img_notice {
  height: 40rpx;
  width: 40rpx;
  float: left;
}
.notice {
  height: 40rpx;
  width: 90%;
  float: right;
} 
.notice_item {
  color: #00E0FE;
  font-size: 20rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2rpx;
}

/**选择币种**/
.picker_container {
  color: #fff;
  font-size: 36rpx;
  letter-spacing: 4rpx;
  display: flex;
  flex-direction: row;
  width: 90%;
  position: relative;
  left: 43rpx;
  top: 40rpx;
}
.picker {
  flex: 0.5;
}
.picker span{
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 2rpx;
  border-style: solid;
  border-width: 12px 10px 0;
  border-color: #fff transparent transparent;
}
.price {
  color: #00E0FE;
  display: block;
  padding-left: 40rpx;
  flex: 0.4;
  margin: auto 0px;
}

/**交易模块样式**/
.tab_trade_container{
  width: 644rpx;
  position: absolute;
  top: 290rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.tab_wrapper{
  width: 100%;
  display: flex;
  flex-direction: row;
  position: relative;
  top: 0;
  left: 0;
}
.tab_item{
  flex: 1;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  padding: 14rpx;
  overflow: hidden;
}
.tab_wrapper .tab_logo {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 14rpx;
}
.tab_active{
  background: #222741;
  border: 1px solid #222741;
  border-radius: 20rpx 20rpx 0 0;
}

.content_one {
  width: 644rpx;
  min-height: 620rpx;
  background-color: #222741;
  border-radius: 0 20rpx 20rpx 20rpx;
}
.content_two {
  width: 644rpx;
  min-height: 620rpx;
  background-color: #222741;
  border-radius: 20rpx;
}
.content_three {
  width: 644rpx;
  min-height: 620rpx;
  background-color: #222741;
  border-radius: 20rpx 0 20rpx 20rpx;
}

/**** 比赛结束样式 ****/
.over_container {
  height: 100%;
  width: 100%;
  background-color: #0A0F2C;
}
