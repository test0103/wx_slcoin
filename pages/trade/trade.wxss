.show_result {
  width: 592rpx;
  height: 745rpx;
  position: relative;
  top: 54rpx;
  left: 80rpx;
  background-size: cover;
  background-image: url('http://pcb8f4day.bkt.clouddn.com/bg_over.png');
}
.show_result .result {
  width: 260rpx;
  color: #F60;
  font-size: 24rpx;
  line-height: 36rpx;
