  position: absolute;
  top: 244rpx;
  left: 0;
  right: 0;
  margin: auto;
}
.show_result text{
  color: #fff;
  display: block;
  font-size: 20rpx;
  line-height: 36rpx;
  position: absolute;
  top: 404rpx;
  left: 244rpx;
}
/*显示个人资产样式*/
.our_assets {
  width: 592rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: absolute;
