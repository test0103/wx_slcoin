.dialog-mask{
    position: fixed;
    z-index: 1000;
    height: 100%;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.dialog-info{
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 35rpx;
    overflow: hidden;
}
.dialog-img{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    margin: auto;
}
.dialog-content{
    padding: 10rpx 30rpx 20rpx;
    min-height: 80rpx;
    font-size: 32rpx;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #FFFFFF;
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    margin: auto;
}